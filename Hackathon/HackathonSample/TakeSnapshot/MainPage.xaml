<Page
    x:Class="TakeSnapshot.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TakeSnapshot"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.BottomAppBar>
        <AppBar IsOpen="True" IsSticky="True">
            <StackPanel Orientation="Horizontal">
                <AppBarButton x:Name="startCameraBtn" Label="Start Camera" Icon="Camera" Click="startCameraBtn_Click"></AppBarButton>
                <AppBarButton x:Name="takeSnapBtn" Label="Capture" Icon="Camera" Click="takeSnapBtn_Click"></AppBarButton>
                <AppBarButton x:Name="startVideoStreamBtn" Label="Start Recording" Icon="GoToStart" Click="startVideoStreamBtn_Click"></AppBarButton>
                <AppBarButton x:Name="stopVideoStreamBtn" Label="Stop Recording" Icon="Stop" Click="stopVideoStreamBtn_Click"></AppBarButton>
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>
    <Grid Background="AliceBlue" HorizontalAlignment="Stretch" Margin="0,0,-529,-626" VerticalAlignment="Stretch">
        <Image Name="captureImage" HorizontalAlignment="Left" Height="503" VerticalAlignment="Top" Width="360" />
    </Grid>
</Page>